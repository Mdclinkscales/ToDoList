@model LoginUser

<div class="col-5 mx-auto">
    <h2>Login</h2>
    <form action="/login" method="POST">
        <div class="form-group">
            <label asp-for="LoginEmail">Email</label>
            <input asp-for="LoginEmail" class="form-control">
            <span asp-validation-for="LoginEmail"></span>
        </div>
        <div class="form-group">
            <label asp-for="LoginPassword">Password</label>
            <input asp-for="LoginPassword" class="form-control">
            <span asp-validation-for="LoginPassword"></span>
        </div>
        <input type="submit" value="Log In" class="btn btn-primary">
    </form>
</div>